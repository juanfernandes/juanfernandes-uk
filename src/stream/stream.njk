{% extends 'layouts/base.njk' %}

{% block main %}
  <div class="container">
    <div class="content" id="content">
      <div class="row">
        <div class="twelve cols">
          <ul class="post-list">
            {%- for post in collections.stream | reverse -%}
            <li>
              <div class="block block--thumb">
                <a href="{{ post.url }}" class="b-inner">
                  <div class="b-text">
                    <h3 class="b-title">{{ post.data.title }}</h3>
                    <div class="meta">
                      <small><time class="dt-published" datetime="{{ post.date | w3DateFilter }}">{{ post.date | dateFilter }}</time></small>
                    </div>
                    <p>{{ post.data.description }}</p>
                  </div>
                </a>
              </div>
            </li>
            {%- endfor -%}
          </ul>
        </div>
        <div class="sidebar meta / four cols">
          {% include 'components/bio.njk' %}
        </div>
      </div>
    </div>
  </div>
{% endblock %}
