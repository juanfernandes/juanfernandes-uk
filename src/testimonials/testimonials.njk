{% extends 'layouts/base.njk' %}

{% block main %}
        <section class="testimonials testimonials--page">
          <div class="content">
            {% for item in testimonials %}
            <div class="testimonial"{% if item.id %} id="{{ item.id  }}"{% endif %}>
              <div class="testimonial__quote">
                <blockquote>
                  <p>{{ item.quote | safe }}</p>
                </blockquote>
                <cite>{{ item.cite }}, {{ item.company }}</cite>
              </div>
              <div class="testimonial__thumb">
                <img src="{{ site.cloudinary_url }}f_auto/{{ item.img }}" alt="{{ item.cite }}" loading="lazy" width="200" height="200">
              </div>
            </div>
            {% endfor %}
          </div>
        </section>
  {% endblock %}
