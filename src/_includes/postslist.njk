          {% if postListItems.length %}
          <ul class="post-list">
            <li>
              <div class="block block--thumb">
                {% for item in postListItems %}
                <a href="{{ post.url }}" class="b-inner">
                  <div class="b-text">
                    <h3 class="b-title">{{ post.data.title }}</h3>
                    <div class="meta">
                      <small><time class="dt-published" datetime="{{ post.date }}">{{ post.date }}</time></small>
                    </div>
                    <p>{{ post.data.description }}</p>
                  </div>
                </a>
                {% endfor %}
              </div>
            </li>
          </ul>
          {% endif %}
