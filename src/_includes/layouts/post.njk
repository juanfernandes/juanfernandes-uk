{% extends 'layouts/blog.njk' %}

{% block intro %}
<div class="intro intro--post{% if customPostImg %} {{ customPostImg }}{% endif %}">
  <div class="intro__content">
    <h1 class="intro__heading">
      <span class="intro__heading--large">{{ title }}</span>
    </h1>
  </div>
</div>
{% endblock %}

{% block main %}
<div class="container">
  <div class="content content--slim">
    <article class="post h-entry">

      {{ content | safe }}

      <p class="meta">
        {% if edited %}<small>Edited on <time class="dt-published" datetime="{{ edited | w3DateFilter }}">{{ edited | dateFilter }}</time></small><br>{% endif %}
        <small>Posted on <time class="dt-published" datetime="{{ date | w3DateFilter }}">{{ date | dateFilter }}</time>, by <a href="/about/" rel="author">Juan Fernandes</a> in {% for item in tags %}<a href="/tags/{{ item }}/" class="p-category">{{ item }}</a> {% endfor %}</small>
      </p>
    </article>

    {% include 'components/signup-form.njk' %}

    {% include 'webmentions.njk' %}
  </div>
</div>
{% endblock %}
