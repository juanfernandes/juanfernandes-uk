{% for month in links | reverse %}
<h2 class="month">{{ month.month }}</h2>

  {%- for link in month.links | reverse -%}
  <div class="link">
    <div class="link__details">
      <h3><a href="{{ link.url }}">{{ link.title }}</a></h3>
      {% if link.excerpt %}<p>{{ link.excerpt | safe }}</p>{% endif %}
      <div class="link__meta">
        {% if link.author %}<span>Author: <a href="{{ link.author.url }}" class="link__author u-inline-block">{{ link.author.name }}</a></span>{% endif %}
        <span class="link__date dt-published">Read on: {{ link.date }}</span>
      </div>
    </div>
  </div>
  {%- endfor -%}
{% endfor %}
