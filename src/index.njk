{% extends 'layouts/base.njk' %}

{% block main %}
        <section class="section section--intro" id="content">
          <div class="content">
            <p>Hey, I'm Juan â€” a freelance freelance website designer with over 15 years of experience. I design &amp; develop responsive websites using industry best practices and standards.</p>
          </div>
        </section>

        <section class="skills">
          <div class="container">
            <div class="cf / content">
              <h2 class="alpha / content__heading">Skills</h2>
              <div class="row">
                <div class="four cols">
                  <div class="skill">
                    <svg class="skill__icon" aria-hidden="true"><use xlink:href="#svg-html5" /></svg>
                    <h3 class="beta / skill__heading">HTML5</h3>
                  </div>
                </div>
                <div class="four cols">
                  <div class="skill">
                    <svg class="skill__icon" aria-hidden="true"><use xlink:href="#svg-css3" /></svg>
                    <h3 class="beta / skill__heading">CSS3</h3>
                  </div>
                </div>
                <div class="four cols">
                  <div class="skill">
                    <svg class="skill__icon" aria-hidden="true"><use xlink:href="#svg-responsive" /></svg>
                    <h3 class=" beta / skill__heading">Responsive</h3>
                  </div>
                </div>
                <div class="four cols">
                  <div class="skill">
                    <svg class="skill__icon" aria-hidden="true"><use xlink:href="#svg-jquery" /></svg>
                    <h3 class=" beta / skill__heading">jQuery</h3>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>

        <section class="recent-work">
          <div class="content">
            <h2 class="alpha / content__heading">Recent Work</h2>
            <div class="row">
              <div class="cols four">
                <div class="project">
                  <a href="work/virgin-wines/">
                    <img class="project__img" src="{{ site.cloudinary_url }}f_auto/work/projects/virginwines-project-recent-2.jpg" alt="Close up of wine bottles on a wine rack" loading="lazy" width="200" height="200">
                    <div class="project__content-wrapper">
                      <h3 class="project__heading">Virgin Wines</h3>
                    </div>
                  </a>
                </div>
              </div>
              <div class="cols four">
                <div class="project">
                  <a href="/work/mclaren/">
                    <img class="project__img" src="{{ site.cloudinary_url }}f_auto/work/projects/mclaren-project-recent.jpg" alt="McLaren P1 car on the road with mountains in the background" loading="lazy" width="200" height="200">
                    <div class="project__content-wrapper">
                      <h3 class="project__heading">McLaren</h3>
                    </div>
                  </a>
                </div>
              </div>
              <div class="cols four">
                <div class="project">
                  <a href="/work/landrover/">
                    <img class="project__img" src="{{ site.cloudinary_url }}f_auto/work/projects/landrover-project-recent.jpg" alt="Land Rover Freelander 90 going down a steep hill" loading="lazy" width="200" height="200">
                    <div class="project__content-wrapper">
                      <h3 class="project__heading">Land Rover</h3>
                    </div>
                  </a>
                </div>
              </div>
              <div class="cols four">
                <div class="project">
                  <a href="/work/tomhartleyjnr/">
                    <img class="project__img" src="{{ site.cloudinary_url }}f_auto/work/projects/tomhartleyjnr-project-recent.jpg" alt="Close up of a 1958 Ferrari 250 TR" loading="lazy" width="200" height="200">
                    <div class="project__content-wrapper">
                      <h3 class="project__heading">Tom Hartley JNR</h3>
                    </div>
                  </a>
                </div>
              </div>
            </div>
          </div>
        </section>

        <section class="testimonials testimonials--section">
          <div class="content">
            <h2 class="alpha / content__heading">Testimonials</h2>
            {% for item in testimonials | randomItem %}
            <article>
              <blockquote>
                <p class="testimonials__quote">{{ item.quote | safe }}</p>
              </blockquote>
              <cite class="testimonials__cite">{{ item.cite }}, {{ item.company }}</cite>
            </article>
            {% endfor %}
          </div>
        </section>

        <section class="companies">
          <div class="content">
            <h2 class="alpha / content__heading">{{ businesses.title }}</h2>
            <div class="client-list">
              {%- for i in range(0, 4) -%}
              {% set item = companies[i] %}
              <div class="client">
                <img class="client__logo" src="{{ site.cloudinary_url }}f_auto/work/clients/{{ companies[i].img }}" alt="{{ companies[i].alt }}" loading="lazy" width="490" height="340">
              </div>
              {%- endfor -%}
            </div>
          </div>
        </section>
{% endblock %}
